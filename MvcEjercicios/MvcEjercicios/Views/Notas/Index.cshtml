@model MvcEjercicios.Models.NotasViewModel

@{
    ViewData["Title"] = "Gestor de Notas (Ejercicio 6) ";
    // Determinar si estamos creando o editando
    bool esEdicion = Model.NotaFormulario.Id != 0;
}

<h1>📝 Gestor de Notas (Ejercicio 6)</h1>
<hr />

<div class="row">
    @* Columna 1: Formulario de Creación/Edición *@
    <div class="col-md-5">
        <div class="card p-4 mb-4">
            <h5 class="card-title">@(esEdicion ? "Editar Nota" : "Crear Nueva Nota")</h5>

            <form asp-controller="Notas" asp-action="Guardar" method="post">

                @* Campo oculto para manejar el ID en edición *@
                <input asp-for="NotaFormulario.Id" type="hidden" />

                @* Campo: Título *@
                <div class="mb-3">
                    <label asp-for="NotaFormulario.Titulo" class="form-label">Título</label>
                    <input asp-for="NotaFormulario.Titulo" class="form-control" />
                    <span asp-validation-for="NotaFormulario.Titulo" class="text-danger"></span>
                </div>

                @* Campo: Contenido *@
                <div class="mb-3">
                    <label asp-for="NotaFormulario.Contenido" class="form-label">Contenido</label>
                    @* <textarea> usa la anotación [DataType(DataType.MultilineText)] *@
                    <textarea asp-for="NotaFormulario.Contenido" rows="6" class="form-control"></textarea>
                    <span asp-validation-for="NotaFormulario.Contenido" class="text-danger"></span>
                </div>

                @* Campo: Categoría (Dropdown) *@
                <div class="mb-3">
                    <label asp-for="NotaFormulario.Categoria" class="form-label">Categoría</label>
                    <select asp-for="NotaFormulario.Categoria" class="form-select">
                        @foreach (var cat in MvcEjercicios.Controllers.NotasController.Categorias)
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-success mt-3">@(esEdicion ? "Actualizar Nota" : "Guardar Nota")</button>
                @if (esEdicion)
                {
                    <a asp-controller="Notas" asp-action="Index" class="btn btn-secondary mt-3">Cancelar Edición</a>
                }
            </form>
        </div>
    </div>

    @* Columna 2: Filtros y Listado de Notas *@
    <div class="col-md-7">
        <h5 class="mb-3">Filtros y Búsqueda</h5>

        @* Formulario de Filtro (se envía de vuelta a la acción Index) *@
        <form asp-controller="Notas" asp-action="Index" method="get" class="mb-4 d-flex">

            <input type="text" name="filtroBusqueda" value="@Model.FiltroBusqueda" placeholder="Buscar por título o contenido..." class="form-control me-2" />

            <select name="filtroCategoria" class="form-select w-auto me-2">
                <option value="Todas" selected="@(Model.FiltroCategoria == "Todas")">Todas las Categorías</option>
                @foreach (var cat in MvcEjercicios.Controllers.NotasController.Categorias)
                {
                    <option value="@cat" selected="@(Model.FiltroCategoria == cat)">@cat</option>
                }
            </select>

            <button type="submit" class="btn btn-outline-primary">Aplicar</button>
        </form>

        <h5 class="mb-3">Notas Encontradas (@Model.NotasFiltradas.Count)</h5>

        @if (Model.NotasFiltradas.Any())
        {
            <div class="accordion" id="notasAccordion">
                @foreach (var nota in Model.NotasFiltradas)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading_@nota.Id">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@nota.Id" aria-expanded="false" aria-controls="collapse_@nota.Id">
                                <span class="badge bg-info me-2">@nota.Categoria</span>
                                <strong>@nota.Titulo</strong>
                                <small class="text-muted ms-auto">Última edición: @nota.FechaUltimaEdicion.ToString("dd/MM/yy HH:mm")</small>
                            </button>
                        </h2>
                        <div id="collapse_@nota.Id" class="accordion-collapse collapse" aria-labelledby="heading_@nota.Id" data-bs-parent="#notasAccordion">
                            <div class="accordion-body">
                                <p>@nota.Contenido</p>

                                <div class="mt-3">
                                    <a asp-controller="Notas" asp-action="Editar" asp-route-id="@nota.Id" class="btn btn-sm btn-warning">Editar</a>
                                    <a asp-controller="Notas" asp-action="Eliminar" asp-route-id="@nota.Id"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('¿Estás seguro de que quieres eliminar esta nota?');">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">No se encontraron notas con los criterios de búsqueda o categoría seleccionados.</div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}